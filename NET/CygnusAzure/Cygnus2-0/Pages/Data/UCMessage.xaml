<UserControl x:Class="Cygnus2_0.Pages.Data.UCMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <GroupBox x:Name="groupBox" Header="Generación de mensajes" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="6" Grid.RowSpan="8" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                
                <TextBox x:Name="textBox" VerticalContentAlignment="Center" TextWrapping="Wrap" Text="{Binding Path=Model.Descripcion}"  Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="8" Grid.RowSpan="3" Margin="0,0,0,5"
                         Style="{StaticResource placeHolder}" Tag="Mensaje"/>

                <TextBox x:Name="textBox1" VerticalContentAlignment="Center" TextWrapping="Wrap" Text="{Binding Path=Model.Causa}"  Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="8" Grid.RowSpan="3" Margin="0,0,0,5"
                         Style="{StaticResource placeHolder}" Tag="Causa"/>

                <TextBox x:Name="textBox2" VerticalContentAlignment="Center" TextWrapping="Wrap" Text="{Binding Path=Model.Solucion}"  Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="8" Grid.RowSpan="3" Margin="0,0,0,5"
                         Style="{StaticResource placeHolder}" Tag="Solución"/>
                <Button x:Name="btnGuardar" Content="Guardar" VerticalAlignment="Center" Command="{Binding Path=Process}" Grid.Column="6" Grid.Row="9" Grid.ColumnSpan="4"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
