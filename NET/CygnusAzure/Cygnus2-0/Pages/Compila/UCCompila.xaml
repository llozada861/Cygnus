<UserControl x:Class="Cygnus2_0.Pages.Compila.UCCompila"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox x:Name="groupBox" Header="Arrastre aquí los archivos que desea compilar" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="6" Grid.RowSpan="5">
            <DataGrid x:Name="dataGridArchCompila" 
                IsReadOnly="false" 
                AllowDrop="True" 
                Drop="listBox1_Drop"
                AutoGenerateColumns="False"
                SelectionMode="Single"
                CanUserDeleteRows="True"
                CanUserAddRows="False"
                CanUserReorderColumns="False"
                CanUserSortColumns="False"
                ItemsSource="{Binding Path=ListaArchivosCargados}"
                  >
                <DataGrid.Columns>
                    <DataGridTextColumn                  
                  IsReadOnly="True"
                  Header="Archivo"
                  Binding="{Binding Path=FileName}" />

                    <DataGridComboBoxColumn Width="200"
                         DisplayMemberPath="Text"
                                            SelectedValuePath="Text"
                                            Header="Tipo"
                                            SelectedValueBinding="{Binding Tipo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                            >
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="{x:Type ComboBox}">
                                <Setter Property="ItemsSource" Value="{Binding ListaTipos}"/>
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="{x:Type ComboBox}">
                                <Setter Property="ItemsSource" Value="{Binding ListaTipos}"/>
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                    </DataGridComboBoxColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox x:Name="groupBox1" Header="Resultados" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="6" Grid.RowSpan="5">
            <DataGrid x:Name="dataGridMensajes"
                      ItemsSource="{Binding Path=ListaObservaciones}"
                      AutoGenerateColumns="False"
                    SelectionMode="Single"
                    CanUserDeleteRows="True"
                    CanUserAddRows="False"
                    CanUserReorderColumns="False"
                    CanUserSortColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn                  
                  IsReadOnly="True"
                  Header="Objeto"
                  Binding="{Binding Path=Text}" />
                    <DataGridTextColumn
                  Header="Tipo"
                  IsReadOnly="True"
                  Binding="{Binding Path=Observacion}" />
                    <DataGridTextColumn
                  Header="Línea"
                  IsReadOnly="True"
                  Binding="{Binding Path=Prioridad}" />
                    <DataGridTextColumn
                  Header="Mensaje"
                  IsReadOnly="True"
                  Binding="{Binding Path=Value}" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox x:Name="grbDatosRequeridos" Header="Datos Requeridos" Grid.Column="6" Grid.Row="0" Grid.RowSpan="3" Grid.ColumnSpan="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <ComboBox x:Name="comboBox" 
                  ItemsSource="{Binding Path=ListaUsuarios}" 
                  SelectedItem="{Binding Path=Usuario}"
                  DisplayMemberPath="Text"  Grid.Row="0" VerticalAlignment="Center"/>
                
                <TextBlock DataContext="{Binding ElementName=comboBox,Path=SelectedItem}"
                   Grid.Row="0" VerticalAlignment="Center"
                   Text="Usuario" 
                   Style="{StaticResource ComboBoxSelectOverlay}"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="grbObjDescomAntes" Header="Objetos Descompilados Antes" Grid.Column="6" Grid.Row="3" Grid.RowSpan="3" Grid.ColumnSpan="4">
            <Grid>
                <Label x:Name="Descom1" Content="{Binding Path=ArchivosCompilados}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  FontWeight="Bold" FontSize="80" />
            </Grid>
        </GroupBox>
        <GroupBox x:Name="grbDescomDes" Header="Objetos Descompilados Después" Grid.Column="6" Grid.Row="6" Grid.RowSpan="3" Grid.ColumnSpan="4">
            <Grid>
                <Label x:Name="Descom2" Content="{Binding Path=ArchivosDescompilados}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="80" FontWeight="Bold" />
            </Grid>
        </GroupBox>

        <Button x:Name="btnProcesar" Content="Procesar"  VerticalAlignment="Center" Grid.Column="6" Grid.Row="9" Grid.ColumnSpan="2" Margin="0,0,5,0" HorizontalAlignment="Center" Click="BtnProcesar_Click" />
        <Button x:Name="btnLimpiar" Content="Limpiar"  VerticalAlignment="Center" Command="{Binding Path=Clean}" Grid.Column="8" Grid.Row="9" Grid.ColumnSpan="2" HorizontalAlignment="Center" />
        <!--<Button x:Name="btnSql" Content="Sqlplus" HorizontalAlignment="Left" VerticalAlignment="Top" Width="92" Foreground="White" FontStyle="Italic" FontWeight="Bold" Click="btnSql_Click" Background="#FF5C99D6" Visibility="Hidden" Margin="0"/>
        <Button x:Name="Conexion" Content="Conexión BD" Command="{Binding Path=Conectar}" Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="2" VerticalAlignment="Center" />
        <Label x:Name="Estado" Content="{Binding Path=EstadoConn}" Grid.Column="2" Grid.Row="9" Grid.ColumnSpan="3" VerticalAlignment="Center" Margin="5,0,0,0"/>-->
    </Grid>
</UserControl>
