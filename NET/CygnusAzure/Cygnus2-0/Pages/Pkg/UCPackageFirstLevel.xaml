<UserControl x:Class="Cygnus2_0.Pages.Pkg.UCPackageFirstLevel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <GroupBox x:Name="groupBox" Header="Datos para generar el Pktbl" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="6" Grid.RowSpan="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label x:Name="label" Content="Usuario" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="0,0,5,0"/>
                <ComboBox x:Name="comboBox" VerticalAlignment="Center" 
                  ItemsSource="{Binding Path=ListaUsuarios}"  
                  SelectedItem="{Binding Path=Usuario}" 
                  DisplayMemberPath="Text" 
                  Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="7" Grid.RowSpan="2" Margin="0,0,0,5"/>
                <Label x:Name="labelTabla" Content="Tabla" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="0,0,5,0"/>
                <TextBox x:Name="TablaText" Text="{Binding Path=Tabla}"  TextWrapping="Wrap" VerticalContentAlignment="Center" CharacterCasing="Upper" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="7" Grid.RowSpan="3" Margin="0,0,0,5"/>
                <Label x:Name="SaoLabel" Content="Código" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="0,0,5,0"/>
                <TextBox x:Name="CasoText" Text="{Binding Path=Funcion}" TextWrapping="Wrap" VerticalContentAlignment="Center" CharacterCasing="Upper" Grid.Column="3" Grid.ColumnSpan="7" Grid.Row="5" Grid.RowSpan="2"/>
            </Grid>
        </GroupBox>
        <Button x:Name="buttonGenerar" Content="Generar" Command="{Binding Path=Process}" Grid.Column="5" Grid.Row="3" Grid.ColumnSpan="3" VerticalAlignment="Center" />

    </Grid>
</UserControl>
