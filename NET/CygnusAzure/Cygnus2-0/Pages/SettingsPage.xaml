<UserControl x:Class="Cygnus2_0.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Name="TabSettings"  Layout="List"   SelectedSource="/Pages/Settings/Appearance.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Apariencia" Source="/Pages/Settings/Appearance.xaml"/>
                <mui:Link DisplayName="Conexión" Source="/Pages/Settings/UCConection.xaml"/>
                <mui:Link DisplayName="General" Source="/Pages/Settings/AdminGeneral/AdminGeneral.xaml" />
                <mui:Link DisplayName="Actualizar" Source="/Pages/Settings/UCUpdate.xaml" />
                <mui:Link DisplayName="Acerca de" Source="/Pages/Settings/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
